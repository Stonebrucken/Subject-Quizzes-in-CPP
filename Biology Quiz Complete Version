 Here is the code if the link doesn't run:

#include <iostream>
#include <string>

using namespace std;

int Guess;
int Total;
 
// Question Class or Question Prompt
class Question {
private:
    string Question_Text;
    string Answer_1;
    string Answer_2;
    string Answer_3;
    string Answer_4;
    int Correct_Answer;
    int Question_Score;
 
public:
    // Setter Function
    void setValues(string, string,
                   string, string,
                   string, int, int);
 
    // Function to ask questions
    void askQuestion();
};
 
// Driver code
int main()
{
    cout << "\n\n\t\t\t\tTHE GCSE BIOLOGY QUIZ"
         << endl;
    cout << "\nPress Enter to start "
         << "the quiz... " << endl;
 
    // Input
    cin.get();
 
    string Name;
    int Age;
 
    // Input the details
    cout << "What is your name biologist?"
         << endl;
    cin >> Name;
    cout << endl;
 
    string Respond;
    cout << "Are you ready to take"
         << " the quiz " << Name
         << "? yes/no" << endl;
    cin >> Respond;
 
    if (Respond == "yes") {
        cout << endl;
        cout << "Good Luck!" << endl;
    }
    else {
        cout << "Okay Bye!" << endl;
        return 0;
    }
 
    // Objects of Question Class
    Question q1;
    Question q2;
    Question q3;
    Question q4;
    Question q5;
    Question q6;
 
    // The Second last Integer will be equatable to the correct answer
    q1.setValues("Question 1: Which type of cell does NOT contain a Nucleus?", "Bacterial Cell",
                 "Bone Marrow Cell", "Liver Cell",
                 "Red Blood Cell", 1, 10);
    q2.setValues("Qeustion 2: Where is Ethene produced?: ", "In the tip of the shoot in a plant",
                 "From Bananas", "Top of the leaf",
                 "In Plant Roots", 2, 10);
    q3.setValues("Question 3: What does Xylem transport in a plant?", "Water",
                 "Sugars", "Enzymes",
                 "Carbon Dioxide", 1, 10);
    q4.setValues("Question 4: What is the function of aveoli in the respiratory system?", "To breathe",
                 "To help respirate anaerobically during oxygen debt", "Used for Gas Exchange in the human body",
                 "To regulate the flow of blood in nearby capillaries", 3, 10);
    q5.setValues("Question 5: What prevents the backflow of blood?", "Arteries",
                 "Pressure", "Pacemaker Cells",
                 "Valves", 4, 10);
    q6.setValues("Question 6: What objective lens should be used last in a microscope?", "40x",
                 "4x", "10x",
                 "None of the above", 1, 10);

 
    q1.askQuestion();
    q2.askQuestion();
    q3.askQuestion();
    q4.askQuestion();
    q5.askQuestion();
    q6.askQuestion();

 
    // Displays the total score
    cout << "Total Score = " << Total
         << "out of 60" << endl;
 
    // Displays the results
 
    // If the player passes the quiz then this happens
    if (Total >= 50) {
        cout << "Congrats you passed the Biology"
             << " quiz!" << endl;
    }
 
    // Otherwise
    else {
        cout << "Alas! You failed the quiz."
             << endl;
        cout << "Better luck next time."
             << endl;
    }
    return 0;
}
 
// Function to set the values of
// the questions
void Question::setValues(
    string q, string a1,
    string a2, string a3,
    string a4, int ca, int pa)
{
    Question_Text = q;
    Answer_1 = a1;
    Answer_2 = a2;
    Answer_3 = a3;
    Answer_4 = a4;
    Correct_Answer = ca;
    Question_Score = pa;
}
 
// Function to ask questions
void Question::askQuestion()
{
    cout << endl;
 
    // Print the questions
    cout << Question_Text << endl;
    cout << "1. " << Answer_1 << endl;
    cout << "2. " << Answer_2 << endl;
    cout << "3. " << Answer_3 << endl;
    cout << "4. " << Answer_4 << endl;
    cout << endl;
 
    // Display the answer
    cout << "What is your answer?(enter your answer as an integer ranging from answers 1-4)"
         << endl;
    cin >> Guess;
 
    // If the answer is correct
    if (Guess == Correct_Answer) {
        cout << endl;
        cout << "Correct !" << endl;
 
        // Update the correct score
        Total = Total + Question_Score;
        cout << "Score = " << Question_Score
             << " out of "
             << Question_Score
             << "!" << endl;
        cout << endl;
    }
 
    // Otherwise
    else {
        cout << endl;
        cout << "Wrong !" << endl;
        cout << "Score = 0"
             << " out of "
             << Question_Score
             << "!" << endl;
        cout << "Correct answer = "
             << Correct_Answer
             << "." << endl;
        cout << endl;
    }
}

