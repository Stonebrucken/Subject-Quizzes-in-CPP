#include <iostream> 
#include <string>

using namespace std;

int Guess;
int Total;
 
// Question Class or Question Prompt
class Question {
private:
    string Question_Text;
    string Answer_1;
    string Answer_2;
    string Answer_3;
    string Answer_4;
    int Correct_Answer;
    int Question_Score;
 
public:
    // Setter Function
    void setValues(string, string,
                   string, string,
                   string, int, int);
 
    // Function to ask questions
    void askQuestion();
};
 
// Driver code
int main()
{
    cout << "\n\n\t\t\t\tTHE FRENCH QUIZ, le quizz de français"
         << endl;
    cout << "\nPress Enter to start "
         << "the quiz... " << endl;
 
    // Input
    cin.get();
 
    string Name;
    int Age;
 
    // Input the details
    cout << "What is your name student? quel est ton nom étudiant?"
         << endl;
    cin >> Name;
    cout << endl;
 
    string Respond;
    cout << "Are you ready to take"
         << " the quiz " << Name
         << "? yes/no" << endl;
    cin >> Respond;
 
    if (Respond == "yes") {
        cout << endl;
        cout << "Good Luck!" << endl;
    }
    else {
        cout << "Okay Bye!" << endl;
        return 0;
    }
 
    // Objects of Question Class
    Question q1;
    Question q2;
    Question q3;
    Question q4;
 
    // The Second last Integer will be equatable to the correct answer
    q1.setValues("Question 1: How do you form the Conditional?", "Keeping the infinitive and adding the assigned ending",
                 "Removing the infinitive and adding the assigned ending", "Removing the infinitive and using étre",
                 "None of the above", 1, 5);
    q2.setValues("Qeustion 2: Identify all endings of the Imperfect Tense: ", "ais, ais, ait, ait, ion, iez",
                 "ais, ais, ait, ion, iez, aient", "ai, ai, as, ie, iez, ait",
                 "None of the above", 2, 5);
    q3.setValues("Question 4: Define traviller in English", "To run",
                 "To work", "To travel",
                 "To do", 2, 5);
    q4.setValues("Question 4: How do you form the Imperative Tense (Hard)", "Drop the infinitive and add ez",
                 "Drop infinitive and add the assigned ending", "Add an ending",
                 "Drop tu, vous, nous or any noun to keep the verb in the present tense", 4, 5);
                 
    q1.askQuestion();
    q2.askQuestion();
    q3.askQuestion();
    q4.askQuestion();

 
 
    // Displays the total score
    cout << "Total Score = " << Total
         << "out of 20" << endl;
 
    // Displays the results
 
    // If the player passes the quiz then this happens
    if (Total >= 20) {
        cout << "Félicitations, vous avez"
             << " réussi!" << endl;
    }
 
    // Otherwise
    else {
        cout << "Vous avez échoué au quiz, je suis déçu."
             << endl;
    }
    return 0;
}
 
// Function to set the values of
// the questions
void Question::setValues(
    string q, string a1,
    string a2, string a3,
    string a4, int ca, int pa)
{
    Question_Text = q;
    Answer_1 = a1;
    Answer_2 = a2;
    Answer_3 = a3;
    Answer_4 = a4;
    Correct_Answer = ca;
    Question_Score = pa;
}
 
// Function to ask questions
void Question::askQuestion()
{
    cout << endl;
 
    // Print the questions
    cout << Question_Text << endl;
    cout << "1. " << Answer_1 << endl;
    cout << "2. " << Answer_2 << endl;
    cout << "3. " << Answer_3 << endl;
    cout << "4. " << Answer_4 << endl;
    cout << endl;
 
    // Display the answer
    cout << "What is your answer?(enter your answer as an integer ranging from answers 1-4)"
         << endl;
    cin >> Guess;
 
    // If the answer is correct
    if (Guess == Correct_Answer) {
        cout << endl;
        cout << "Correct !" << endl;
 
        // Update the correct score
        Total = Total + Question_Score;
        cout << "Score = " << Question_Score
             << " out of "
             << Question_Score
             << "!" << endl;
        cout << endl;
    }
 
    // Otherwise
    else {
        cout << endl;
        cout << "Wrong !" << endl;
        cout << "Score = 0"
             << " out of "
             << Question_Score
             << "!" << endl;
        cout << "Correct answer = "
             << Correct_Answer
             << "." << endl;
        cout << endl;
    }
}
